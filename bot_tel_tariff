<?php
$botToken = "8276344966:AAFPrnz2VMnMli4L3xm8gwC6SydeGnnH6tU";
$chatId = "1638237402";

$name = $_POST['first_name'] ?? '';
$phone = $_POST['phone'] ?? '';
$email = $_POST['email'] ?? '';
$comment = $_POST['comment'] ?? '';

$tariffs = [];
if (!empty($_SESSION['cart'])) {
    foreach ($_SESSION['cart'] as $item) {
        $tariffs[] = $item['title'] . " (" . $item['price'] . "₽)";
    }
}
$tariff_list = !empty($tariffs) ? implode(", ", $tariffs) : "не указаны";

$message = "💬 Новый заказ!\nИмя: $name\nТелефон: $phone\nEmail: $email\nТарифы: $tariff_list\nКомментарий: $comment";

$url = "https://api.telegram.org/bot$botToken/sendMessage?chat_id=$chatId&text=" . urlencode($message);

file_get_contents($url); // отправка
?>
